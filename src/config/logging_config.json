{
  "logging": {
    "version": "1.0.0",
    "default_level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "colored_output": true,
    "handlers": {
      "console": {
        "enabled": true,
        "level": "DEBUG",
        "format": "%(log_color)s%(levelname)-8s%(reset)s %(blue)s%(name)s:%(lineno)d%(reset)s %(message)s",
        "colors": {
          "DEBUG": "cyan",
          "INFO": "green",
          "WARNING": "yellow",
          "ERROR": "red",
          "CRITICAL": "red,bg_white"
        }
      },
      "file": {
        "enabled": true,
        "level": "INFO",
        "filename": "logs/mcode_translator.log",
        "max_bytes": 10485760,
        "backup_count": 5,
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "loggers": {
      "mcode_translator": {
        "level": "DEBUG",
        "handlers": ["console", "file"],
        "propagate": false
      },
      "src.workflows": {
        "level": "INFO",
        "handlers": ["console", "file"],
        "propagate": true
      },
      "src.storage": {
        "level": "WARNING",
        "handlers": ["file"],
        "propagate": true
      },
      "requests": {
        "level": "WARNING",
        "handlers": ["console"],
        "propagate": false
      }
    },
    "performance_logging": {
      "enabled": true,
      "log_slow_operations": true,
      "slow_operation_threshold_ms": 1000,
      "memory_usage_tracking": true,
      "memory_threshold_mb": 512
    }
  }
}