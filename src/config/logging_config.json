{
  "version": "1.0.0",
  "default_level": "INFO",
  "format": "%(log_color)s%(levelname)-8s%(reset)s %(blue)s%(name)s:%(lineno)d%(reset)s %(message)s",
  "colored_output": true,
  "handlers": {
    "console": {
      "level": "INFO",
      "colors": {
        "DEBUG": "cyan",
        "INFO": "green",
        "WARNING": "yellow",
        "ERROR": "red",
        "CRITICAL": "red,bg_white"
      }
    }
  },
  "loggers": {
    "mcode_translator": {
      "level": "INFO",
      "propagate": true
    },
    "src.workflows": {
      "level": "INFO",
      "propagate": true
    },
    "src.storage": {
      "level": "INFO",
      "propagate": true
    },
    "src.pipeline": {
      "level": "DEBUG",
      "propagate": true
    },
    "src.pipeline.llm_service": {
      "level": "DEBUG",
      "propagate": true
    },
    "src.utils": {
      "level": "INFO",
      "propagate": true
    },
    "httpx": {
      "level": "WARNING",
      "propagate": false
    },
    "requests": {
      "level": "WARNING",
      "propagate": false
    }
  },
  "performance_logging": {
    "enabled": true,
    "log_slow_operations": true,
    "slow_operation_threshold_ms": 1000,
    "memory_usage_tracking": true,
    "memory_threshold_mb": 512
  }
}